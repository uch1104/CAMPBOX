<% if user_signed_in? %>
  <% if item.favorited_by?(current_user) %> 
      <%=link_to item_favorites_path(item.id), method: :delete, remote: true do %>
      <img src="/images/favorite-red.jpeg" alt="favorite" class="favorite-image">
      <span class="favorite-text"><%= item.favorites.count %></span>
      <% end %>
  <% else %>
      <%=link_to item_favorites_path(item.id), method: :post, remote: true do %>
      <img src="/images/favorite.jpeg" alt="favorite" class="favorite-image">
      <span class="no-favorite-text"><%= item.favorites.count %></span>
      <% end %>
  <% end %>
<% else %>
  <img src="/images/favorite.jpeg" alt="favorite" class="favorite-image">
  <span class="no-favorite-text"><%= item.favorites.count %></span>
<% end %>