<%= render "shared/header" %>
<div class="mypage-wrap">
  <div class="mypage-container">
    <%= render "shared/mypage_side" %>
    <div class='mypage-main'> 
      <div class='form-header'>
        <h1 class='form-header-text'>
          クレジットカードを登録する
        </h1>
      </div>
      <%= form_with  url: cards_path, id: 'charge-form', class: 'card-form',local: true do |f| %>
        <div class='form-group'>
          <div class='form-text-wrap'>
            <label class="form-text">カード番号</label>
          </div>
          <%= f.text_field :number, class:"input-default", placeholder:"カード番号(半角英数字)", maxlength:"16" %>
        </div>
        <div class='form-group'>
          <div class='form-text-wrap'>
            <label class="form-text">セキュリティコード</label>
          </div>
          <%= f.text_field :cvc, class:"input-default", placeholder:"カード背面にある3桁の番号", maxlength:"4" %>
        </div>
        <div class='form-group'>
          <div class='form-text-wrap'>
            <label class="form-text">有効期限</label>
          </div>
          <div class='input-expiration-date-wrap'>
            <%= f.select :exp_month, 1..12, {include_blank: "---"}, class: "exp" %>
            <p class="month">月</p>
            <%= f.select :exp_year, 20..25, {include_blank: "---"}, class: "exp" %>
            <p class="month">年</p>
          </div>
        </div>
        <div class="credit-btn">
          <%= f.submit "登録する", class:"register-red-btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render "shared/footer" %>