<div class="mypage-wrap">
  <div class="mypage-container">
    <div class="mypage-side">
      <nav class="mypage-nav">
        <ul class="mypage-nav-list">
          <li>
            <%= link_to user_path(current_user.id) do %>
            <div class="mypage-link">マイページ</div>
            <span class="material-icons" id="mypage-icon">navigate_next</span>
            <% end %>
          </li>
          <li>
            <div id='my-item-list'>
              <div class="mypage-link">出品一覧</div>
              <span class="material-icons" id="mypage-icon">navigate_next</span>
            </div>
          </li>
          <li>
            <%= link_to notifications_path do %>
            <div class="mypage-link">お知らせ</div>
            <span class="material-icons" id="mypage-icon">navigate_next</span>
            <% end %>
          </li>
          <li>
            <%= link_to like_user_path(current_user.id) do %>
            <div class="mypage-link">お気に入り</div>
            <span class="material-icons" id="mypage-icon">navigate_next</span>
            <% end %>
          </li>
          <li>
            <%= link_to rooms_path do %>
            <div class="mypage-link">メッセージ</div>
            <span class="material-icons" id="mypage-icon">navigate_next</span>
            <% end %>
          </li>
          <li>
          <%if current_user.card.present? %>
            <%= link_to card_path(current_user.id) do %>
            <div class="mypage-link">クレジットカード</div>
            <span class="material-icons" id="mypage-icon">navigate_next</span>
            <% end %>
          <% else %>
            <%= link_to new_card_path do %>
            <div class="mypage-link">クレジットカード</div>
            <span class="material-icons" id="mypage-icon">navigate_next</span>
            <% end %>
          <% end %>
          </li>
          <li>
          <%if current_user.address.present? %>
            <%= link_to address_path(@address.id) do %>
            <div class="mypage-link">お届け先住所</div>
            <span class="material-icons" id="mypage-icon">navigate_next</span>
            <% end %>
          <% else %>
            <%= link_to new_address_path do %>
            <div class="mypage-link">お届け先住所</div>
            <span class="material-icons" id="mypage-icon">navigate_next</span>
            <% end %>
          <% end %>
          </li>
          <li>
            <%= link_to edit_user_registration_path do %>
            <div class="mypage-link">ログイン情報</div>
            <span class="material-icons" id="mypage-icon">navigate_next</span>
            <% end %>
          </li>
        </ul>
      </nav>
 </div>

    <div class='mypage-main'> 
      <div class='form-header'>
        <h1 class='form-header-text'>
          お知らせ一覧
        </h1>
      </div>
      <div class="rooms">
        <% notifications = @notifications.where.not(visitor_id: current_user.id) %>
        <% if notifications.exists? %>
            <%= render notifications %>
        <% else %>
            <p>現在、お知らせはありません</p>
        <% end %>
      </div>
    </div>
  </div>
</div>