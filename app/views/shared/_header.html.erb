<header>
  <div class="header-inner">
    <div class="header-seach">
      <%= form_with(url: search_items_path, local: true, method: :get, class: "search-form") do |f|%>
        <%= f.text_field :keyword, placeholder: "キャンプ用品名・キーワード", class: "search-input" %>
        <%= f.submit "検索する", class: "search-btn" %>
      <% end %>
    </div>
    <div class="clear"></div>
    <h1 class="logo"><%= link_to 'CAMP BOX', root_path, class: "logo-title" %></h1>
    <div class="header-menu">
      <ul class="lists-right">
      <% if user_signed_in? %>
        <li>
          <%= link_to user_path(current_user.id), class:"link-mypage" do%>
            <img src="/images/mypage.png" alt="人" class="mypage-icon">
            <span class="user-nickname">マイページ</span>
          <% end %>
        </li>
        <li>
          <%= link_to new_item_path do%>
            <img src="/images/tent1.png" alt="テント" class="tent-icon">
            <span class="lend-item">出品する</span>
          <% end %>
        </li>
      <% end %>
        <span class="material-icons" id="open">menu</span>
      </ul>
    </div>
    <div class="overlay">
      <nav>
        <ul>
          <% if user_signed_in? %>
            <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete,  class: "login-icon" %></li>
            <li><%= link_to 'ヘルプ', "#", class: "login-icon" %></li>
          <% else %>
            <li class="login-icon" id="open-registration">会員登録</li>
            <li class="login-icon" id="open-session">ログイン</li>
            <li><%= link_to 'ヘルプ', "#", class: "login-icon" %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>