<header>
  <div class="header-inner">
    <div class="header-seach">
      <form class="search-form" action="#">
        <input class='input-box' placeholder='キーワードから探す'>
      </form>
    </div>
    <div class="clear"></div>
    <h1 class="logo"><%= link_to 'RentGear', root_path, class: "logo-title" %></h1>
    <div class="header-menu">
      <ul class="lists-right">
      <% if user_signed_in? %>
        <li><%= link_to current_user.nickname, "#", class: "user-nickname" %></li>
        <li><%= link_to '出品する', "#", class: "lend-item" %></li>
      <% end %>
        <span class="material-icons" id="open">menu</span>
      </ul>
    </div>
    <div class="overlay">
      <nav>
        <ul>
          <% if user_signed_in? %>
            <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete,  class: "logout" %></li>
            <li><%= link_to 'ヘルプ', "#", class: "logout" %></li>
          <% else %>
            <li class="logout" id="open-registration">会員登録</li>
            <li class="logout" id="open-session">ログイン</li>
            <li><%= link_to 'ヘルプ', "#", class: "logout" %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>